<body>
    <div class="stars" id="stars"></div>
    
    <!-- Frame Preview (Default View) -->
    <div class="frame-preview" id="framePreview">
        <h1 class="frame-title">💰 CRYPTO CLICKER</h1>
        <p class="frame-subtitle">Build Your FarCoin Empire!</p>
        
        <div class="coin-display">💰</div>
        
        <div class="frame-stats">
            <div class="stat-item">
                <div class="stat-value" id="previewBalance">0</div>
                <div class="stat-label">FarCoins</div>
            </div>
            <div class="stat-item">
                <div class="stat-value" id="previewPower">1</div>
                <div class="stat-label">Per Click</div>
            </div>
            <div class="stat-item">
                <div class="stat-value" id="previewClicks">0</div>
                <div class="stat-label">Clicks</div>
            </div>
        </div>
        
        <div class="frame-buttons">
            <button class="frame-btn" onclick="startGame()">🎮 Play Now</button>
            <button class="frame-btn" onclick="showInfo()">ℹ️ Info</button>
        </div>
    </div>

    <!-- Full Game (Hidden by default) -->
    <div class="game-container" id="gameContainer">
        <div class="user-info" id="userInfo">🔗 Connecting...</div>
        
        <h1>💰 CRYPTO CLICKER</h1>
        <p class="subtitle">✨ Click the golden coin to earn FarCoins! ✨</p>
        
        <div class="stats">
            <div class="stat-card">
                <span class="stat-value" id="balance">0</span>
                <div class="stat-label">FarCoins</div>
            </div>
            <div class="stat-card">
                <span class="stat-value" id="clickPower">1</span>
                <div class="stat-label">Per Click</div>
            </div>
            <div class="stat-card">
                <span class="stat-value" id="totalClicks">0</span>
                <div class="stat-label">Total Clicks</div>
            </div>
        </div>

        <button class="coin-button" id="coinButton" onclick="clickCoin()">💰</button>

        <div class="upgrades">
            <h3 class="upgrade-title">⚡ Upgrades ⚡</h3>
            <button class="upgrade-btn" id="upgrade1" onclick="buyUpgrade(1)">
                🔥 Double Click Power (Cost: 10)
            </button>
            <button class="upgrade-btn" id="upgrade2" onclick="buyUpgrade(2)">
                ⚡ Auto Mining Bot (Cost: 50)
            </button>
            <button class="upgrade-btn" id="upgrade3" onclick="buyUpgrade(3)">
                💎 Diamond Multiplier (Cost: 100)
            </button>
        </div>

        <div class="frame-buttons">
            <button class="frame-btn" onclick="backToFrame()">🔙 Back to Frame</button>
            <button class="frame-btn" onclick="shareScore()">📤 Share Score</button>
        </div>
    </div>

    <script type="module">
        // Farcaster Frame SDK Import
        let sdk;
        try {
            const module = await import('https://esm.sh/@farcaster/frame-sdk');
            sdk = module.sdk;
        } catch (e) {
            console.log('Frame SDK not available');
        }
        
        // Game State
        let gameState = {
            balance: 0,
            clickPower: 1,
            totalClicks: 0,
            upgrades: {
                doubleClick: 0,
                autoClicker: 0,
                diamondHands: 0
            },
            autoClickerActive: false
        };

        let user = null;
        let isFrameMode = true;

        // Create stars background
        function createStars() {
            const starsContainer = document.getElementById('stars');
            for (let i = 0; i < 50; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 2 + 's';
                star.style.animationDuration = (Math.random() * 3 + 1) + 's';
                starsContainer.appendChild(star);
            }
        }

        // Frame Functions
        window.startGame = function() {
            document.getElementById('framePreview').style.display = 'none';
            document.getElementById('gameContainer').classList.add('active');
            isFrameMode = false;
            initializeFarcaster();
        };

        window.backToFrame = function() {
            document.getElementById('framePreview').style.display = 'flex';
            document.getElementById('gameContainer').classList.remove('active');
            isFrameMode = true;
            updatePreview();
        };

        window.showInfo = function() {
            alert('💰 Crypto Clicker\n\n🎮 Click to earn FarCoins\n⚡ Buy upgrades to boost earnings\n🤖 Auto-miners work while you\'re away\n💎 Build your crypto empire!\n\nStart playing now!');
        };

        window.shareScore = function() {
            const text = `Just earned ${gameState.balance.toLocaleString()} FarCoins in Crypto Clicker! 💰\n\nCan you beat my score? 🚀`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'My Crypto Clicker Score',
                    text: text,
                    url: window.location.href
                });
            } else {
                navigator.clipboard.writeText(text + '\n' + window.location.href);
                alert('Score copied to clipboard! 📋');
            }
        };

        function updatePreview() {
            document.getElementById('previewBalance').textContent = gameState.balance.toLocaleString();
            document.getElementById('previewPower').textContent = gameState.clickPower.toLocaleString();
            document.getElementById('previewClicks').textContent = gameState.totalClicks.toLocaleString();
        }

        // Initialize Farcaster SDK
        async function initializeFarcaster() {
            try {
                if (sdk) {
                    await sdk.init();
                    user = await sdk.user.getUser();
                    
                    if (user) {
                        document.getElementById('userInfo').textContent = `👋 ${user.displayName || 'Anon'}`;
                    } else {
                        document.getElementById('userInfo').textContent = '🎮 Guest Player';
                    }
                }
            } catch (error) {
                console.log('Frame mode - limited functionality');
                document.getElementById('userInfo').textContent = '🌟 Frame Player';
            }
        }

        // Game Functions
        window.clickCoin = function() {
            gameState.balance += gameState.clickPower;
            gameState.totalClicks++;
            
            createFloatingCoin();
            
            const button = document.getElementById('coinButton');
            button.style.transform = 'scale(0.95) rotate(-5deg)';
            setTimeout(() => {
                button.style.transform = 'scale(1) rotate(0deg)';
            }, 150);
            
            updateDisplay();
            updatePreview();
        };

        window.buyUpgrade = function(upgradeType) {
            let cost;
            
            switch(upgradeType) {
                case 1: // Double Click
                    cost = 10 * Math.pow(2, gameState.upgrades.doubleClick);
                    if (gameState.balance >= cost) {
                        gameState.balance -= cost;
                        gameState.upgrades.doubleClick++;
                        gameState.clickPower = 1 + gameState.upgrades.doubleClick * 2;
                        alert('🔥 Click power boosted!');
                    } else {
                        alert('💸 Not enough FarCoins!');
                    }
                    break;
                    
                case 2: // Auto Clicker
                    cost = 50 * Math.pow(2, gameState.upgrades.autoClicker);
                    if (gameState.balance >= cost) {
                        gameState.balance -= cost;
                        gameState.upgrades.autoClicker++;
                        if (!gameState.autoClickerActive) {
                            startAutoClicker();
                        }
                        alert('⚡ Auto mining bot deployed!');
                    } else {
                        alert('💸 Need more FarCoins!');
                    }
                    break;
                    
                case 3: // Diamond Hands
                    cost = 100 * Math.pow(2, gameState.upgrades.diamondHands);
                    if (gameState.balance >= cost) {
                        gameState.balance -= cost;
                        gameState.upgrades.diamondHands++;
                        gameState.clickPower += 5;
                        alert('💎 Diamond hands activated!');
                    } else {
                        alert('💸 Diamond hands require more coins!');
                    }
                    break;
            }
            
            updateDisplay();
            updatePreview();
        };

        function startAutoClicker() {
            if (gameState.upgrades.autoClicker > 0) {
                gameState.autoClickerActive = true;
                setInterval(() => {
                    if (gameState.upgrades.autoClicker > 0) {
                        const autoGain = gameState.upgrades.autoClicker * 2;
                        gameState.balance += autoGain;
                        updateDisplay();
                        updatePreview();
                    }
                }, 2000);
            }
        }

        function createFloatingCoin() {
            const coin = document.createElement('div');
            coin.className = 'floating-coin';
            coin.textContent = '💰+' + gameState.clickPower;
            coin.style.left = (Math.random() * 200 + 100) + 'px';
            coin.style.top = '200px';
            coin.style.zIndex = '1000';
            
            document.querySelector('#gameContainer').appendChild(coin);
            
            setTimeout(() => {
                coin.remove();
            }, 1200);
        }

        function updateDisplay() {
            document.getElementById('balance').textContent = gameState.balance.toLocaleString();
            document.getElementById('clickPower').textContent = gameState.clickPower.toLocaleString();
            document.getElementById('totalClicks').textContent = gameState.totalClicks.toLocaleString();
            
            updateUpgradeButtons();
        }

        function updateUpgradeButtons() {
            const upgrade1Cost = 10 * Math.pow(2, gameState.upgrades.doubleClick);
            const upgrade2Cost = 50 * Math.pow(2, gameState.upgrades.autoClicker);
            const upgrade3Cost = 100 * Math.pow(2, gameState.upgrades.diamondHands);
            
            document.getElementById('upgrade1').textContent = `🔥 Double Click Power (Cost: ${upgrade1Cost.toLocaleString()})`;
            document.getElementById('upgrade2').textContent = `⚡ Auto Mining Bot (Cost: ${upgrade2Cost.toLocaleString()})`;
            document.getElementById('upgrade3').textContent = `💎 Diamond Multiplier (Cost: ${upgrade3Cost.toLocaleString()})`;
            
            document.getElementById('upgrade1').disabled = gameState.balance < upgrade1Cost;
            document.getElementById('upgrade2').disabled = gameState.balance < upgrade2Cost;
            document.getElementById('upgrade3').disabled = gameState.balance < upgrade3Cost;
        }

        // Initialize everything
        window.addEventListener('load', () => {
            createStars();
            
            // Load saved game
            const savedGame = localStorage.getItem('cryptoClickerSave');
            if (savedGame) {
                gameState = { ...gameState, ...JSON.parse(savedGame) };
                if (gameState.upgrades.autoClicker > 0) {
                    startAutoClicker();
                }
            }
            
            updatePreview();
            updateDisplay();
            
            // Auto-save every 5 seconds
            setInterval(() => {
                localStorage.setItem('cryptoClickerSave', JSON.stringify(gameState));
            }, 5000);
        });

        // Handle URL parameters for frame actions
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('action') === 'play') {
            setTimeout(startGame, 500);
        }
    </script>
</body>
</html>
